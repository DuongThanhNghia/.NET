@model IEnumerable<ql_nha_sach.Models.LOAISACH>

@{
    ViewBag.Title = "Loại Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 style="text-align:center;">Mã Loại</h2>

<p>
    <button class="btn btn-outline-primary" style="margin-left:30px; height:40px;">@Html.ActionLink("Thêm", "Create")</button>
</p>
<table class="table" style="border: 2px solid black; width:50%; margin-left:350px;color:black;">
    <tr>
        <th style="border: 2px solid black; width:60%; text-align:center;">
            Tên Loại
        </th>
        <th style="border: 2px solid black; text-align: center;">Chức Năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="border: 2px solid black;">
            @Html.DisplayFor(modelItem => item.Tenloai)
        </td>
        <td style="border: 2px solid black; text-align: center;">
            <button type="button" class="btn btn-outline-dark" style="height:30px; width:80px;">
                @Html.ActionLink("Sửa", "Edit", new { id = item.Maloai })
            </button>
                        
            <button type="button" class="btn btn-outline-danger" style="height: 30px; width: 80px;">
                @Html.ActionLink("Xóa", "Delete", new { id = item.Maloai })
            </button>
</td>
    </tr>
}

</table>
