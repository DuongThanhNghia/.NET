@model IEnumerable<ql_nha_sach.Models.LichSuMuaHang>

@{
    ViewBag.Title = "Lịch Sử Mua Hàng";
}

<h1>Lịch Sử Mua Hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tên Sách</th>
            <th>Ngày Mua</th>
            <th>Số Lượng</th>
            <th>Tổng Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SACH.TenSach</td>
                <td>@item.NgayMua.ToString("dd/MM/yyyy")</td>
                <td>@item.SoLuong</td>
                <td>@item.TongTien.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
