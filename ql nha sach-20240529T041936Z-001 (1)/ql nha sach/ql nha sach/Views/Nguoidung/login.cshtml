@model ql_nha_sach.Models.TAIKHOAN

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Đăng Nhập</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/sign-in/">



    <!-- Bootstrap core CSS -->
    <link href="~/theme/js/bootstrap.min.css" rel="stylesheet" />


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="~/theme/css/signin.css" rel="stylesheet" />
</head>
<body class="text-center" style="margin-left:550px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form class="login-form">
            <img class="mb-4" src="~/theme/images/logo.jpg" alt="" width="72" height="57">
            <h4 class="h3 mb-3 fw-normal">ĐĂNG NHẬP </h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="text-align:left;">
                <label for="floatingInput">Tên đăng nhập</label>
                <div class="col-md-10" style="width: 300px; border-radius: 10px;">
                    @Html.EditorFor(model => model.TenTK, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="text-align:left;">
                <label for="floatingInput">Mật Khẩu</label>
                <div class="col-md-10" style="width: 300px; border-radius: 10px;">
                    @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="width:200px;margin-left:50px; margin-top:5px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng Nhập" class="form-control btn btn-primary rounded submit px-3" />
                </div>
            </div>

            <div class="form-group d-md-flex">
                <div class="w-50 text-md-right" style="text-align:right; margin-left:100px;">
                    <a href="~/Nguoidung/signup">Đăng Ký</a>
                </div>
            </div>

         </form>
        }

</body>
</html>
