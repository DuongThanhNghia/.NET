@model IEnumerable<ql_nha_sach.Models.KHACHHANG>

@{
    ViewBag.Title = "Khách Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Thêm Khách", "Create")
    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
    </p>
    }
</p>
    <table class="table" style="border: 2px solid black;width:80% ;color:black; margin-left: 200px; ">
        <tr>
            <th style="border: 2px solid black;  text-align:center;">Mã Khách Hàng</th>
            <th style="border: 2px solid black;  text-align:center;">
                Tên Khách Hàng
            </th>
            <th style="border: 2px solid black; text-align:center;">
                Địa Chỉ
            </th>
            <th style="border: 2px solid black; text-align:center;">
                Sdt
            </th>
            @*<th style="border: 2px solid black; text-align:center;">
                Giới Tính
            </th>*@
            <th style="border: 2px solid black; text-align:center;">
                Chức Năng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 2px solid black;  text-align:center;">
                    @Html.DisplayFor(modelItem =>item.MaKH)
                </td>
                <td style="border: 2px solid black;  text-align:center;">
                    @Html.DisplayFor(modelItem => item.Tenkh)
                </td>
                <td style="border: 2px solid black;  text-align:center;">
                    @Html.DisplayFor(modelItem => item.Diachi)
                </td>
                <td style="border: 2px solid black; text-align:center;">
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                @*<td style="border: 2px solid black; text-align:center;">
                    @Html.DisplayFor(modelItem => item.Giotinh)
                </td>*@
                <td style="border: 2px solid black;  text-align:center;">
                    <button type="button" class="btn btn-outline-dark" style="height:30px; width:80px;">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaKH })
                    </button>

                    <button type="button" class="btn btn-outline-dark" style="height:30px; width:80px;">
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaKH })
                    </button>
                </td>
            </tr>
        }

    </table>
